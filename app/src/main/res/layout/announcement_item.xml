<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/college_gold"
        android:padding="16dp">

        <!-- Announcement Title -->
        <TextView
            android:id="@+id/announcementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title of the Announcement"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Announcement Description -->
        <TextView
            android:id="@+id/announcementDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short description of the announcement."
            android:textSize="14sp"
            android:textColor="#444444"
            android:paddingTop="4dp" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/announcementTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted on: 2024-11-17"
            android:textSize="12sp"
            android:textColor="#888888"
            android:paddingTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>