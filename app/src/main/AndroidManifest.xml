<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UMFlintApplication"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".AcademicCalendar"
            android:exported="false"
            android:label="@string/title_activity_academic_calendar"
            android:theme="@style/Theme.UMFlintApplication.NoActionBar" />
        <activity
            android:name=".AlertsActivity"
            android:exported="false"
            android:label="@string/title_activity_alerts"
            android:theme="@style/Theme.UMFlintApplication.NoActionBar" />
        <activity
            android:name=".NewsActivity"
            android:exported="false"
            android:label="@string/title_news"
            android:theme="@style/Theme.UMFlintApplication.NoActionBar" /> <!-- <activity -->
        <activity android:name=".MessagingActivity"
            android:exported="false"
            android:label="@string/title_student_messaging"
            android:theme="@style/Theme.UMFlintApplication.NoActionBar"/>
        <!-- android:name=".SignInActivity" -->
        <!-- android:exported="false" -->
        <!-- android:label="@string/title_sign_in" -->
        <!-- android:theme="@style/Theme.UMFlintApplication.NoActionBar" /> -->
        <activity
            android:name=".DepartmentInformationActivity"
            android:exported="false"
            android:label="@string/title_activity_department_information"
            android:theme="@style/Theme.UMFlintApplication.NoActionBar" />
        <activity
            android:name=".MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps_page"
            android:theme="@style/Theme.UMFlintApplication.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.UMFlintApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>